#!/bin/bash
srun --pty --export=ALL --partition=multigpu --nodes=$1 --tasks-per-node=$2 \
	--gres=gpu:v100-sxm2:$2 --cpus-per-task=1 --mem=100Gb \
	mpirun  \
	-bind-to none -map-by slot \
    	-x NCCL_DEBUG=INFO -x LD_LIBRARY_PATH -x PATH \
    	-mca pml ob1 -mca btl ^openib \
	python horovod_synthetic_benchmark.py
